                                    span.fa.fa-star-o(aria-hidden='true')
                                    span.fa.fa-star-o(aria-hidden='true')
                                    span 3.0
                            li
                                a(href='#')
                                    span.fa.fa-star(aria-hidden='true')
                                    span.fa.fa-star(aria-hidden='true')
                                    span.fa.fa-star-half-o(aria-hidden='true')
                                    span.fa.fa-star-o(aria-hidden='true')
                                    span.fa.fa-star-o(aria-hidden='true')
                                    span 2.5

                    .deal-leftmk.left-side
                        h3.sear-head Special Deals
                        .special-sec1.row.mb-3
                            .img-deals.col-md-4
                                img.img-fluid(src='/images/s4.jpg' alt='')
