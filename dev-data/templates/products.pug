                        .special-sec1.row.my-3
                            .img-deals.col-md-4
                                img.img-fluid(src='/images/s1.jpg' alt='')
                            .img-deal1.col-md-8
                                h3 Bella Toes
                                a(href='shop-single.html') $165.00
                        .special-sec1.row
                            .img-deals.col-md-4
                                img.img-fluid(src='/images/s5.jpg' alt='')
